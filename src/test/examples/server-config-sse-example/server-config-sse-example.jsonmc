[
  {
    "server": {
      "serverId": "sse-server",
      "port": 9002,
      "description": "Server-Sent Events (SSE) Mock Server Example"
    },
    "expectations": [
      {
        "httpRequest": {
          "method": "GET",
          "path": "/api/stream",
          "sse": true
        },
        "httpResponse": {
          "statusCode": 200,
          "interval": 1000,
          "messages": [
            "Event 1: Server started",
            "Event 2: Processing data",
            "Event 3: Task completed"
          ]
        }
      },
      {
        "httpRequest": {
          "method": "GET",
          "path": "/api/notifications",
          "sse": true
        },
        "httpResponse": {
          "statusCode": 200,
          "interval": 500,
          "messages": [
            `{"type":"info","message":"Welcome to the notification stream"}`,
            `{"type":"update","message":"New message received"}`,
            `{"type":"warning","message":"Storage almost full"}`,
            `{"type":"success","message":"Backup completed successfully"}`
          ]
        }
      },
      {
        "httpRequest": {
          "method": "GET",
          "path": "/api/progress",
          "sse": true
        },
        "httpResponse": {
          "statusCode": 200,
          "interval": 2000,
          "messages": [
            `{"progress":10,"status":"Starting"}`,
            `{"progress":30,"status":"Loading data"}`,
            `{"progress":60,"status":"Processing"}`,
            `{"progress":90,"status":"Finalizing"}`,
            `{"progress":100,"status":"Complete"}`
          ]
        }
      }
    ]
  }
]
